<Page
    x:Class="LetsGoDexTracker.Views.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LetsGoDexTracker.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <StackPanel>
            <TextBlock Text="About" FontWeight="ExtraBold" FontSize="50" HorizontalAlignment="Center"/>
            <TextBlock FontSize="25" HorizontalAlignment="Center" Text="Purpose:" FontWeight="Bold" Margin="0 100 0 0"/>
            <TextBlock FontSize="25" HorizontalAlignment="Center" Text="This Application was designed to help you complete the National Pokedex for Pokemon Lets Go Eevee and"/>
            <TextBlock FontSize="25" HorizontalAlignment="Center" Text="Lets Go Pikachu by allowing you to discover where pokemon are located with the interactive map, keep "/>
            <TextBlock FontSize="25" HorizontalAlignment="Center" Text="track of the pokemon you've caught so far, and look at pokedex data."/>
         
            
        </StackPanel>
    </Grid>

</Page>
